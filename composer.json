{
    "name": "dualmedia/doctrine-retry-bundle",
    "description": "Bundle for easy access to retryable doctrine transactions",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DualMedia\\DoctrineRetryBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DualMedia\\DoctrineRetryBundle\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "pkly"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3",
        "doctrine/orm": "^2 || ^3",
        "symfony/framework-bundle": "^6.4 || ^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "pedrotroller/php-cs-custom-fixer": "^2",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "spaze/phpstan-disallowed-calls": "^4",
        "phpunit/phpunit": "^12",
        "pkly/phpunit-service-create-trait": "^1.0"
    }
}
